
---
interface RichTextProps {
  id: string;
  sort: number;
  hide_block: boolean;
  background: string;
  item: {
    content: string;
    headline: string;
    id: string;
    alignment: "left" | "center";
    tagline: string;
  };
}

const { background, item: { content, headline, alignment, tagline } } = Astro.props as RichTextProps;
---

<section class={`richtext ${background}`} style={`text-align: ${alignment};`}>
  <div class="richtext-content">
    <span class="tagline">{tagline}</span>
    <h2>{headline}</h2>
    <div class="content" set:html={content}></div>
  </div>
</section>

<style>
  .richtext {
    padding: 4rem 2rem;
    background-color: #ffffff;
    color: #333333;
  }

  .richtext.dark {
    background-color: #333333;
    color: #ffffff;
  }

  .richtext-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .tagline {
    display: block;
    font-size: 1rem;
    font-style: italic;
    color: #888888;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333333;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #555555;
  }
</style>